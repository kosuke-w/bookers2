<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: f.object %>
    <label>Title</label>
    <%= f.text_field :title %>
    <label>Opinion</label>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>

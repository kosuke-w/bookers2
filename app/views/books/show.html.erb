<%= notice %>

  <div>
    <%= render 'books/info', book: @pbook %>
  </div>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user.id %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user.id %>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>



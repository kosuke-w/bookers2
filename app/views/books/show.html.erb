<%= notice %>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/info', book: @pbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'40x40' %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user.id == current_user.id %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</main>



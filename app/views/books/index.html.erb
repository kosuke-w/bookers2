<main>
  <div>
    <div>
      <div>
        <%= render 'books/info', book: @book %>
      </div>

      <div>
        <h2>Books</h2>
        <table>
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            <%= paginate @books %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</main>

<div>
  <h2>User info</h2>
  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <table>
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= book.user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div>
      <%= link_to "bottun", edit_user_path(book.user.id) %>
    </div>

</div>

<h2>New book</h2>
  <%= form_with model: book, url:'/books', local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: f.object %>
    <label>Name</label>
    <%= f.text_field :name %>
    <label>Image</label>
    <%= f.attachment_field :profile_image %>
    <label>Introduction</label>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>